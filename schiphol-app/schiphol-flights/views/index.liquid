{% include "./partials/head.liquid" %}

<body>
    {% include "./partials/header.liquid" %}
    <main>
        <h1>Schiphol flights of today</h1>

        {% assign prevPage = page | minus: 1 %}
        {% assign nextPage = page | plus: 1 %}
        <section>
            <a href="/{{ nextPage }}"><img src="/img/arrow-back.svg" alt="arrow pointing to the left"></a>
            {% comment %} <a href="/{{ prevPage }}">Previous page</a>
            <a href="/{{ nextPage }}">Next page</a> {% endcomment %}

            <ul>
                {% for flight in flights %}
                    <li>
                        <a href="/flights/{{ flight.flightName }}" class='{{ flight.prefixICAO }}'>
                        <img src="{{ flight.airlineData[0].logo_url }}" alt="{{ flight.airlineData[0].name }}">
                        Flight {{ flight.flightName }} - Status: {{ flight.publicFlightState.flightStates }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
            <a href="/{{ nextPage }}"><img src="/img/arrow-forward.svg" alt="arrow pointing to the right"></a>
        </section>
    </main>
    {% include "./partials/footer.liquid" %}
</body>

